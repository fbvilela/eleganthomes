<div class="content-top-bar">
            	<p class="page-title"><span><%= @home.title %></span></p>
            </div>
            
            <div class="big-img-mask">
   	  			
            <%= image_tag @home.image.url, :width=>"640" %>
            </div>
            
            <div class="container-details">
            	<div class="home-and-land-title"><%= @home.title %> </div>
             	<div class="home-and-land-price">Price: <br /> <%= number_to_currency(@home.price, :locale => :au, :precision => 0) %></div>
              
             	<div class="container-icons">
              		<img src="/images/bed-icon.png" width="50" height="50" class="little-icon" />
                	<div class="bedrooms"><%= @home.bedrooms %> </div>
                	<img src="/images/shower-icon.png" width="50" height="50" class="little-icon" />
                	<div class="shower"><%= @home.bathrooms %></div>
                	<img src="/images/car-icon.png" width="50" height="50" class="little-icon" />
                	<div class="garage"><%= @home.car_parks %></div>

                  <% for item in @home.feature_list.split(",") %> 
                    <div class="extra-info">- <%= item %> </div>
                  <% end %>   
              	</div> <!-- end container icons  -->
                
                <div class="download-pdf-btn"><%= link_to "Download PDF", @home.pdf.url , :target => "_blank" %> </div>
            
</div><!-- end container details -->