<script type="text/javascript">
	$(function() {
	   $('#photo-gallery a').lightBox();
	});
</script>

<div class="content-top-bar">
  	<p class="page-title"><span>elegant &nbsp;&nbsp; living &nbsp;&nbsp; homes - <%= @album.name %></span></p>
</div>
            
            
    
<div id="photo-gallery">
     <% for asset in @album.assets %> 
        <div class="thumb">
        	<div class="img-mask">
                    <%= link_to asset.image.url(:medium) do %>
                       <%= image_tag asset.image.url(:thumb), :width=>"140" %>
                    <% end %> 
            </div>
      </div>
    <% end %>
</div>