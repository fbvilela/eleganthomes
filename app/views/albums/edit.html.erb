<div id="updating-title"><%= flash[:notice] %></div>
<%= form_for @album, :html => {:multipart => true, :name => "album_form"}, :name => "album_form" do |f| %>
  	
  	<div class="admin-column">

      <div class="title-admin">
      	<div class="field">
    		<%= f.label :name %><br />
    		<%= f.text_field :name %>
 	 	</div>
      </div>
      <div id="scroll-box">
      <% for asset in @album.assets %> 
       <% unless asset.image_file_name.blank? %>
        <div class="row">
          <div class="title-element"><%= asset.image_file_name %></div>
          <div class="ed-btn"><%= link_to "Delete", remove_asset_path(asset.id) , :method => :delete, :confirm => "Are you sure?" %></div>
        </div>
        <% end %> 
       <% end %>
       <div class="row">
       	<div class="title-element">Add Images</div>
       </div>
       <% f.fields_for :assets do |asset| %>
         
          <%= asset.file_field :image if asset.object.image_file_name.blank?%>
         
       <% end %>
        
      </div> <!-- end scroll box -->

      <div class="create-new"><a href="#" onClick="document.album_form.submit();">Save</a></div>
    </div>
 <% end %>
