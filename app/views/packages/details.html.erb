<div class="content-top-bar">
            	<p class="page-title"><span><%= @package.title %></span></p>
            </div>
            
            <div class="big-img-mask">
   	  			
            <%= image_tag @package.image.url, :width=>"640" %>
            </div>
            
            <div class="container-details">
            	<div class="home-and-land-title">Lot <%= @package.lot_number %> <%= @package.suburb %> (<%= @package.land_size%>m2)</div>
             	<div class="home-and-land-price">Home & Land From: <br /> $<%= @package.price %></div>
              
             	<div class="container-icons">
              		<img src="/images/bed-icon.png" width="50" height="50" class="little-icon" />
                	<div class="bedrooms"><%= @package.bedrooms %></div>
                	<img src="/images/shower-icon.png" width="50" height="50" class="little-icon" />
                	<div class="shower"><%= @package.bathrooms %></div>
                	<img src="/images/car-icon.png" width="50" height="50" class="little-icon" />
                  <div class="garage"><%= @package.car_parks %></div>
                  
                  <% for info in @package.feature_list.split(",") %>
                    <div class="extra-info">- <%= info %></div>
                  <% end %> 
                  
              	</div> <!-- end container icons  -->
                
                <div class="download-pdf-btn"><%= link_to "Download PDF", @package.pdf.url , :target => "_blank" %> </div>
            
</div><!-- end container details -->