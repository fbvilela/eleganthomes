<%= form_for @package , :html => {:multipart => true } do |f| %>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% @package.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
  <div id="container-form">
        
        <div class="form">
            <h6>Home Name:</h6><%= f.text_field :name %>
        </div>

        <div class="form">
            <h6>Title:</h6><%= f.text_field :title %>
        </div>
        
        <div class="form-medium">
            <h5>Lot No:</h5><%= f.text_field :lot_number %>
        </div>
        
        <div class="form-medium">
            <h5>Suburb:</h5><%= f.text_field :suburb %>
        </div>
        
        <div class="form-medium">
            <h5>Region:</h5><%= f.text_field :region %>
        </div>
        
        <div class="form-medium">
            <h5>Land Size:</h5><%= f.text_field :land_size %>
        </div>
        
        <div class="form-medium">
            <h5>Price:</h5><%= f.text_field :price %>
        </div>
        
        <div class="form-medium">
            <h5>Full T. Price:</h5><%= f.text_field :full_tk_price %>
        </div>
        
        <div class="form-small">
            <h5>Bedrooms:</h5><%= f.text_field :bedrooms %>
        </div>
        
        <div class="form-small">
            <h5>Bathrooms:</h5><%= f.text_field :bathrooms %>
        </div>
        
        <div class="form-small">
            <h5>Garage:</h5><%= f.text_field :car_parks %>
        </div>
       
        
    </div> <!-- end container form -->
    
    <div id="container-form">
    
        <div class="form-text-area">
            <h6>Details List: (separate by comma)</h6><%= f.text_area :feature_list, :rows => 4 , :cols => 40, :style=>"width: 270px; height: 70px;" %> 
        </div>
        
        <div class="form-text-area">
            <h6>Overview Description:</h6><%= f.text_area :description, :rows => 4 , :cols => 40, :style=>"width: 270px; height: 70px;" %> 
        </div>
        
        <div class="form-text-area">
            <h6>Full Turnkey Inclusions: (separate by comma)</h6><%= f.text_area :full_tk_inclusions, :rows => 4 , :cols => 40, :style=>"width: 270px; height: 70px;" %> 
        </div>
        <div class="form">
            <h5>Address: </h5><%= f.text_field :address %>
        </div>
        
    </div> <!-- end container form -->

  
    
  

   <div class="uploading-container">
     <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :floorplan %><br /> 
    <%= f.file_field :floorplan %>
    <%= f.label :pdf %><br /> 
    <%= f.file_field :pdf %>
  </div>
  <%= f.submit %>
   </div>
<% end %>
