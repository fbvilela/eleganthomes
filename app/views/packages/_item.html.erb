<a href="<%=package_detail_url(package.id)%>">
<div class="package-thumb">
	<div class="mask-package-img-thumb">
       <div class="package-img-thumb">
        	<%= image_tag package.image.url(:thumb), :class => 'package-img' %>
            <div class="bed-car-bath-icons">
	          	<p class="number-of-bedrooms"><%= package.bedrooms%></p>
	            <p class="number-of-cars"><%= package.car_parks %></p>
	            <p class="number-of-bath"><%= package.bathrooms %></p>
            </div> <!-- end bed car bath icons -->
        </div> <!-- end package img thumb -->
    </div> <!-- and mask package img thumb -->
    <p class="package-title"><%= package.name %> - Home & Land - <%= package.suburb %></p>
    <p class="package-price">From: <%= number_to_currency(package.price, :locale => :au, :precision => 0) %></p>
 </div>
 </a> <!-- end package thumb -->