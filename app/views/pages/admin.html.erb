<div id="updating-title"><%= flash[:notice] %></div>
  	<div class="admin-column">

      <div class="title-admin">Packages</div>
      <div id="scroll-box">
      <% for package in Package.all %> 
        <div class="row">
          <div class="title-element"><%= package.title %></div>
          <div class="ed-btn"><%= link_to "Edit", edit_package_path(package) %></div>
          <div class="ed-btn"><%= link_to "Delete", package , :method => :delete, :confirm => "Are you sure?"%></div>
        </div>
        <% end %> 
      </div> <!-- end scroll box -->
      <div class="create-new"><%= link_to "Create New Package" , new_package_path %></div>
    </div>
    
    <div class="admin-column">
      <div class="title-admin">Albums</div>
      <div id="scroll-box">
        
        <% for album in Album.all %> 
        <div class="row">
          <div class="title-element"><%= album.name %></div>
          <div class="ed-btn"><%= link_to "Edit", edit_album_path(album) %></div>
          <div class="ed-btn"><%= link_to "Delete", album, :method => :delete, :confirm => "Are you sure?" %></div>
        </div>
        <% end %>
      </div> <!-- end scroll box -->
      <div class="create-new"><%= link_to "Create New Album", new_album_path %></div>

</div>

